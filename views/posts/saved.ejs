<% layout('layouts/boilerplate') -%>
    <!-- <h1>Your saved Posts</h1> -->
    <h1 class="text-2xl font-bold text-center mt-4">Saved Pages</h1>
    <div class="grid grid grid-cols-6 gap-2">
        <% for( let post of saved ) { %>
            <div class="dark:bg-gray-800 dark:text-gray-100 col-span-3">
                <div class="container max-w-4xl px-10 py-6 mx-auto rounded-lg shadow-sm dark:bg-gray-900">
                    <div class="flex items-center justify-between">
                        <span class="text-sm dark:text-gray-400">Jun 1, 2020</span>
                        <a rel="noopener noreferrer" href="#"
                            class="px-2 py-1 font-bold rounded dark:bg-violet-400 dark:text-gray-900">Javascript</a>
                    </div>
                    <div class="mt-3">
                        <a rel="noopener noreferrer" href="/posts/<%= post._id %>" class="text-2xl font-bold hover:underline"><%= post.title %></a>
                      <p>  <%= post.content.split(' ').slice(0, 20).join(' ') %>                    </p>
                    </div>
                    <div class="flex items-center justify-between mt-4">
                        <a rel="noopener noreferrer" href="/posts/<%= post._id %>" class="hover:underline dark:text-violet-400">Read more</a>
                        <div>
                            <a rel="noopener noreferrer" href="/user/<%=post.owner._id%>/profile" class="flex items-center">
                                <img src="https://source.unsplash.com/50x50/?portrait" alt="avatar"
                                    class="object-cover w-10 h-10 mx-4 rounded-full dark:bg-gray-500">
                                <span class="hover:underline dark:text-gray-400"><%= post.author %></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>